# ============================================================================
# Grant Alignment Engine - Environment Configuration Template
# ============================================================================
# Copy this file to .env and update values for your environment
# NEVER commit the actual .env file to version control


# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME="Grant Alignment Engine API"
APP_VERSION=1.0.0
LOG_LEVEL=INFO


# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL with asyncpg driver required
DATABASE_URL=postgresql+asyncpg://foam_user:secure_password@localhost:5432/foam_grants
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false


# ============================================================================
# API CONFIGURATION
# ============================================================================
API_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000


# ============================================================================
# JWT & SECURITY CONFIGURATION
# ============================================================================
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-at-least-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7


# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
UPLOAD_DIR=/tmp/foam_uploads
UPLOAD_MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=.pdf,.docx,.doc,.txt


# ============================================================================
# AI/ML CONFIGURATION
# ============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229


# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50


# ============================================================================
# CELERY CONFIGURATION
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json


# ============================================================================
# AWS S3 CONFIGURATION (OPTIONAL)
# ============================================================================
# Uncomment and configure if using AWS S3 for file storage
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=foam-grants-bucket
# AWS_S3_REGION=us-east-1


# ============================================================================
# FOAM ORGANIZATION CONFIGURATION
# ============================================================================
ORGANIZATION_NAME=Fathers On A Mission
ORGANIZATION_EIN=82-2374110
ORGANIZATION_501C3=true
ORGANIZATION_FOUNDED=2017
ORGANIZATION_LOCATION=East Baton Rouge Parish, Louisiana

# Program targets
FOAM_ANNUAL_TARGET_FATHERS=140
FOAM_ANNUAL_TARGET_CHILDREN=210

FOAM_PROGRAMS=Project Family Build,Responsible Fatherhood Classes,Celebration of Fatherhood Events,Louisiana Barracks Program


# ============================================================================
# DATA SYSTEM INTEGRATION
# ============================================================================
# EmpowerDB Integration
EMPOWERDB_ENABLED=false
EMPOWERDB_API_URL=https://api.empowerdb.example.com

# nFORM Integration
NFORM_ENABLED=false
NFORM_API_URL=https://api.nform.example.com


# ============================================================================
# ENVIRONMENT-SPECIFIC NOTES
# ============================================================================
# DEVELOPMENT:
#   - DEBUG=true
#   - DATABASE_ECHO=true (optional)
#   - All API docs enabled
#
# STAGING:
#   - DEBUG=false
#   - DATABASE_ECHO=false
#   - API docs enabled (restricted)
#   - CORS_ORIGINS limited to staging domain
#
# PRODUCTION:
#   - DEBUG=false
#   - DATABASE_ECHO=false
#   - API docs disabled
#   - CORS_ORIGINS restricted to production domain only
#   - All API keys stored in secure secrets management
#   - TrustedHost middleware enabled
